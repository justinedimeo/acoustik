.slider 
    width 100% 
    height 900px
    font-family 'EXODUS - PERSONAL USE', sans-serif
    color #fff
    font-size 2.4rem
    padding 4rem
    background: linear-gradient(to bottom right, #F76B1C, #FAD961) fixed
    .background-genre
        position absolute
        left 9rem
        text-transform uppercase
        font-size 26rem
        font-family 'Raleway', sans-serif
        margin-top 2rem
        font-weight 1000
        color #FFF
        opacity 0.04
    .card
        width 21rem
        height 21rem
        background #000000
        margin auto
        border-radius 2rem 2rem 0rem 0rem
        background: linear-gradient(to bottom, #F76B1C, #FAD961) fixed
        padding-left 2.6rem
        padding-right 2.6rem
        padding-top 2rem
        position relative
        z-index 3
        .logo
            text-transform uppercase
            font-font-family 'EXODUS - PERSONAL USE', sans-serif
            font-size 0.6rem
            letter-spacing 0.8rem
        .title-card
            text-transform uppercase
            font-size 1rem
            font-family 'Raleway', sans-serif
            margin-top 2rem
            font-weight 800
        .description-card
            text-transform none
            font-size 0.8rem
            font-family 'Raleway', sans-serif
            margin-top 1rem
            font-weight 500
            line-height 1.1rem
        .genre
            text-transform uppercase
            font-size 2.1rem
            font-family 'Raleway', sans-serif
            font-weight 900
            opacity 0.4
            position absolute 
            bottom 3rem
            // left 3rem
        .instrument-card
            position absolute
            width 120%
            bottom -5rem
            left 0rem
            img 
                width 100%
    .card-create
        background #fff
        height 10rem
        width 21rem
        margin auto
        border-radius 0rem 0rem 2rem 2rem
        box-shadow 0px 8px 16px 0px rgba(245,166,35,0.5)
        position relative
        z-index 2
        p
            font-family 'Raleway', sans-serif
            text-transform uppercase
            font-size 1rem
            color #F5A623
            position absolute
            bottom 1.5rem
            left 4.35rem
            font-weight 700
            padding 0.5rem 4rem
            border solid #000 0.18rem
            border-image linear-gradient(to right, #FAD961, #F76B1C) 10
            border-radius 3rem
.custom
    height 100vh
    h3, p
        color #ffffff
        text-align center
        font-family 'Raleway', sans-serif
    h3
        font-size 2rem
        font-weight 700
        margin-bottom 1rem
        margin-top -1rem
    p
        font-size 1rem
        font-weight 100
        margin-bottom 0.5rem
    .button-custom
        text-align center
        a
            color #fff
            font-size 0.9rem
            font-weight 800
            letter-spacing 0.1rem
            margin 1rem auto
            text-transform uppercase
            font-family 'Raleway', sans-serif
            border 0.05rem solid #fff
            border-radius 10rem
            padding 0.2rem 1rem
    .disc
        width 18rem
        height 18rem
        border-radius 10rem
        margin 4rem auto
        background-image url('https://source.unsplash.com/random/400x400')
        position relative
        transform translateX(4rem)
        animation-duration 4s
        animation-name rotation
        animation-iteration-count 1
        animation-direction normal
        animation-timing-function linear
      .center-disk
            width 4rem
            height 4rem
            border-radius 10rem
            background #fff
            position absolute
            top 7rem
            left 7rem
    .cover
        width 20rem
        height 20rem
        background #F7F7F7
        margin -24rem auto
        border-radius 0.1rem
        transform translateX(0rem)
        -webkit-box-shadow 0px 2px 4px 0px rgba(0,0,0,0.15)
        -moz-box-shadow 0px 2px 4px 0px rgba(0,0,0,0.15)
        box-shadow 0px 2px 4px 0px rgba(0,0,0,0.15)
        animation-duration 5s
        animation-name cover
        animation-iteration-count 1
        animation-direction normal
        p.song-number
            color #000
            vertical-align bottom
            position absolute
            border 0.13rem solid #000
            padding 0.4rem 0.4rem
            border-radius 10rem
            font-weight 800
            bottom 6%
            right 10%
        p.click-me
            color #C5C5C5
            font-size 1.5rem
            padding-top 8rem
            animation-duration 2s
            animation-name click-me
            animation-iteration-count infinite
            animation-direction alternate-reverse
        img
            display none


@keyframes rotation {
    from {
        transform: translateX(0rem) rotate(0deg)
    }
  
    to {
        transform translateX(4rem) rotate(360deg)
    }
}

@keyframes cover {
    0% {
        transform: translateX(-50rem)
    }
  
    100% {
        transform translateX(0rem)
    }
}

@keyframes click-me {
    0% {
        transform: scale(1)
    }
  
    100% {
        transform scale(1.2)
    }
}
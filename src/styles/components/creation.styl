body
    #creation
        width 100%
        height 900px
        background linear-gradient(to bottom right, #F76B1C, #FAD961) fixed
        text-align center
        padding 4rem
        font-size 2.4rem
        font-family 'Raleway', sans-serif
        color #fff
        h1
            font-weight bold
            letter-spacing 0.1rem
        h2         
            font-size 1.5rem
            margin-top 1rem
            letter-spacing 0.1rem
        .container-left
            margin-top 5rem
            margin-left 3rem
            text-align left
            span
                font-size 20px
                font-weight 700
                text-transform uppercase
                letter-spacing 0.3rem
            .boxes
                margin-top 1rem
                .box
                    background white
                    width 6rem
                    height 6rem
                    display inline-block
                    border-radius 1rem
                    color #F78B1C
                    font-size 2.4rem
                    font-weight bold
                    padding-top 2rem
                    padding-bottom 2rem
                    margin-right 1.5rem
                    text-align center
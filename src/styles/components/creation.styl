body
    #creation
        width 100%
        height 1000px
        background linear-gradient(to right, #F76B1C, #FAD961) fixed
        text-align center
        padding-top 5rem
        font-family 'Raleway', sans-serif
        h1
            color white
            font-size 36px
            font-weight bold
        h2
            color white            
            font-size 24px
            margin-top 10px
        .container-left
            margin-top 5rem
            margin-left 3rem
            text-align left
            span
                color white
                font-size 20px
                font-weight 700
                text-transform uppercase
                letter-spacing 4px
            .boxes
                margin-top 1rem
                .box
                    background white
                    width 6rem
                    height 6rem
                    display inline-block
                    border-radius 16px
                    color #F78B1C
                    font-size 36px
                    font-weight bold
                    padding-top 2rem
                    padding-bottom 2rem
                    margin-right 1.5rem
                    text-align center
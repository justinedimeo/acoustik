body
    #creation
        width 100%
        height 160vh
        // background linear-gradient(to bottom right, #F76B1C, #FAD961) fixed
        // padding 4rem
        font-size 2rem
        font-family 'Raleway', sans-serif
        color #fff
        padding-bottom 4rem
        .centered
            text-align center
            padding-bottom 2rem
            h1.creation-page
                font-weight 700
                letter-spacing 0.1rem
                text-align center
            h2         
                font-size 1rem
                font-weight 100
                margin-top 1rem
                letter-spacing 0.1rem
                text-align center
            .container
                width auto
                height auto
                .left
                    // padding 0 6vw 0 6vw
                .container-left
                    // width 25rem
                    // margin-top 2rem
                    // text-align left
                    display inline-block
                    vertical-align middle
                    .instrument
                        width 24rem            
                        margin-top 3rem
                        span
                            font-size 1rem
                            font-weight 700
                            text-transform uppercase
                            letter-spacing 0.3rem
                            text-align left
                            display block
                            margin-left 2.8rem
                        .main-instru
                            margin-left 0rem  
                            img 
                                margin-right 1rem
                                width 6%
                                vertical-align middle
                        .boxes
                            margin-top 1rem
                            .box
                                background white
                                box-shadow 0px 6px 0px #F5F5F5
                                width 5rem
                                height 5rem
                                border-radius 1rem
                                // color #F78B1C
                                font-size 2rem
                                font-weight 700
                                padding-top 1.5rem
                                padding-bottom 2rem
                                // margin-right 1.5rem
                                text-align center
                            .box:nth-child(1),.box:nth-child(2)
                                margin-right 1.5rem
                            .box-visible
                                display inline-block
                            .box-invisible
                                display none
                .rec-container
                    width 4rem
                    text-align center
                    display inline-block
                    vertical-align middle
                    margin-left 6rem // 4rem shift between left and right margins
                    margin-right 6rem
                    &:hover
                        cursor pointer
                    .rec-button
                        background #fff
                        width 3.6rem
                        height 3.6rem
                        border-radius 3rem
                        &:hover
                            cursor pointer
                        &:hover .rec-middle
                            transform scale(0.87)
                        .rec-middle.action
                            animation action 1s ease-in 20 alternate 
                        .rec-middle
                            background linear-gradient(to bottom right, #9F041B, #F5515F)
                            width 2rem
                            height 2rem
                            border-radius 3rem
                            margin auto
                            transition 0.3s ease-in
                            &:hover
                                cursor pointer
                    .rec-text
                        font-size 1.2rem
                        font-weight 700
                        text-transform uppercase
                        letter-spacing 0.3rem
                        margin-left 0.4rem
                    .time-left
                        font-size 300%
                        font-weight bold
                        opacity 0.2
                        position absolute
                        top 65%
                        right 45%
            .language
                text-align right
                margin-top 4rem
                margin-right 13rem
                span
                    font-size 1rem
                    font-weight 600
                    text-transform uppercase
                    letter-spacing 0.2rem
                    display inline-block
                    vertical-align middle
                .language-button
                    width 3.2rem
                    height 2rem
                    border 2px solid rgba(0, 0, 0, 0.1)
                    border-radius 1rem
                    display inline-block
                    vertical-align middle
                    .language-circle
                        background #fff
                        width 1.7rem
                        height 1.65rem
                        border-radius 1rem
                        border 1px solid rgba(0, 0, 0, 0.1)
                        box-shadow 0 2px rgba(0, 0, 0, 0.1)
                        transform translateX(0)
                        transition transform  0.3s ease-in
        form
            .confirm-button
                height 2rem
                font-size 0.9rem
                color #fff
                font-weight 800
                letter-spacing 0.1rem
                text-transform uppercase
                font-family 'Raleway', sans-serif
                border 0.05rem solid #fff
                border-radius 10rem
                padding 0.35rem 1rem
                vertical-align top
                display inline-block
                // margin-left 12.9%
                margin-top -3.4rem
            .play  
                margin-left 2rem

@keyframes action {
    from{
        opacity 0.7
    }

    to{
        opacity 1
    }
    
}
    
@media screen and (max-width: 1040px) 
    body
        #creation
            .centered
                h1.creation-page, h2
                    text-align left
                    margin-left 11rem
                    display none
                .language
                    margin-right 17%
                .container
                    margin-top 4%
                    .rec-container
                        position absolute
                        top 14%
                        right 36.5%

@media screen and (max-width: 777px) 
    body
        #creation
            .confirm-button
                font-size 0.5rem
                margin-top -0.6rem
                margin-left 15%
            .play
                margin-left 12%
            header 
                text-align center 
                padding 1rem 0rem
            .centered
                .language
                    display none
                .container
                    .container-left
                        .instrument.first-instru
                            margin-top 30%
                        .instrument
                            width 90vw
                            margin-top 1rem
                            .boxes
                                .box
                                    width 17vw
                                    height 17vw
                                    padding-top 2.4vh
                                .box:nth-child(1),.box:nth-child(2)
                                    margin-right 7.5vw
                    .rec-container
                        position: absolute;
                        top: 10%;
                        left: -14%;
                        .rec-button 
                            width 2.5rem
                            height 2.5rem
                            .rec-middle
                                width 1.3rem
                                height 1.3rem